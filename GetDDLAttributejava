			for (DDLRecord rec : ddlRecords){
				Field reDate = rec.getField("Date");
				Object dat = reDate.getValue();
				Date datee = new Date((long)dat);
				
				//now sort date in ascending/descending order
			}
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}	
	}
}
